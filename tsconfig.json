{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": false,
    "removeComments": false,
    "lib": [
      "DOM",
      "ES2020"
    ],
  },
  "include": [
    "src/**/*",
    "src/ui/panierPage.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}